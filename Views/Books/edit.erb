<form action="/Books/<%= @book[:id] %>" method="POST">

  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control"  placeholder="Title" name="title" value="<%= @book[:title] %>">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Cover </label>
    <input type="text" class="form-control"  placeholder="Cover" name="<%= @book[:cover] %>">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Year</label>
    <input type="text" class="form-control"  placeholder="Year" name="year" value="<%= @book[:year] %>">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Author</label>
    <input type="text" class="form-control" placeholder="Author" name="author" value="<%= @book[:author] %>">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

  <% if (@book[:id] != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
